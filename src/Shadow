import java.awt.*;
import java.awt.event.*;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import javax.imageio.ImageIO;
public class Shadow {
	//variables 
	 private int x =500;
	 private int y =400;
	 private int xa=1;
	 private int ya=1;
	 private int d=100;
	 private Main cf;
	
	 private BufferedImage imgSLR = null;
	 private BufferedImage imgSUD = null;
	 
	 public Shadow(Main cf) {
		 this.cf=cf;
		 
		 try {
				imgSLR = ImageIO.read(new File("SLR.png"));
			} catch (IOException e)
			{
				System.out.println("No Image");
			}
		 try {
				imgSUD = ImageIO.read(new File("SUD.png"));
			} catch (IOException e)
			{
				System.out.println("No Image");
			}
	 }
	  
	 public void move()
	 {
		 // x/y velocity
		 if ((x + xa < 0) || (x + xa > cf.getWidth() - d))
		 xa *= -1;
		 if ((y + ya < 0) || (y + ya > cf.getHeight() - d-400))
		 ya *= -1;
	 x = x + xa; 
	 y = y + ya; 
	 }
	 
	 
	 public void collision(Shadow B) {
		 int dx = (x-B.x) + (xa-B.xa);
		 int dy = (y-B.y) + (ya-B.ya);
		 //if the balls collide...
		 if (Math.sqrt(dx*dx+dy*dy)<=d)
		 {
		 //switch velocities
		 int tempxa = xa;
		 int tempya = ya;
		 xa = B.xa;
		 ya = B.ya;
		 B.xa = tempxa;
		 B.ya = tempya;
		 }
		} 
	 
	 public void paint(Graphics2D g2d) {
		g2d.drawImage(imgSUD, x, y,d,d,null);	 
		
		 
	 }
	 
	 
}
